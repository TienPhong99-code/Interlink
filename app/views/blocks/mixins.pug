mixin Btn(text, type, classCustom,icon="fa-light fa-arrow-right icon")
    if(!classCustom)
        if(type == "button")
            button.btn(type="submit",class=classCustom)
                span.inner #{text}
                i(class=icon)
        else
            a.btn(href="",class=classCustom)
                span.inner #{text}
                i(class=icon)
    else 
        if(type == "button")
            button.btn(type="submit",class=classCustom)
                span.inner #{text}
                i(class=icon)
        else
            a.btn(href="", class=classCustom)
                span.inner #{text}
                i(class=icon)
mixin PageNumber 
    ul.page-numbers
        li 
            a.prev.page-numbers(href="")
                i.fa.fa-angle-left
        li
            span.page-numbers.current   
                | 1
        li
            a.page-numbers(href="")   
                | 2
        li 
            span.page-numbers.dot 
                |...
        li
            a.page-numbers(href="")   
                | 10
        li 
            a.next.page-numbers(href="")
                i.fa.fa-angle-right
mixin breadCrumb(arr)
  .breadcrumb 
      ul.breadcrumb-list
         li.breadcrumb-item(data-aos="fade-right")
            a.breadcrumb-link(href="")
               | Trang chủ
         each txt in arr
            li.breadcrumb-item(data-aos="fade-right")
               a.breadcrumb-link(href="") #{txt}
mixin pagination(classCustom)
    .swiper-pagination(class=classCustom)

mixin CountDown(time,customClass)
   .countDownJs(class= customClass)
      .countdown(data-time=time) 
         .countdown-it.date
         .countdown-it.hour
         .countdown-it.minute
         .countdown-it.second
