      label.checker(class=classCustom) 
         input(type=type, name=name)
         span.circle 
         span.txt #{text}
            if(num)
               span.num #{num}
   if (shape == "checkbox") 
      label.checker(class=classCustom) 
         input(type=type , name=name)
         span.sqr 
         span.txt #{text}
            if(num)
               span.num #{num}
   if (shape == "tag")
      label.checker(class=classCustom) 
         input(type=type, name=name)
         span.txt #{text}
            if(num)
               span.num #{num}
